@model Servico

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h1>Cadastro</h1>
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">
                @TempData["msg"]
            </div>
        }
        <form asp-action="cadastrar">
            <div class="mb-3">
                <label asp-for="Categoria"></label>
                <input asp-for="Categoria" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Descricao"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="Valor"></label>
                <input asp-for="Valor" class="form-control" />
            </div>
            <button class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
    <div class="col-6">
        <h1>Listagem</h1>
        <table class="table">
            <tr>
                <th>Categoria</th>
                <th>Descrição</th>
                <th>Valor</th>
            </tr>
            @foreach (var item in ViewBag.lista)
            {
                <tr>
                    <td>@item.Categoria</td>
                    <td>@item.Descricao</td>
                    <td>@item.Valor</td>
                </tr>
            }
        </table>
    </div>
</div>

